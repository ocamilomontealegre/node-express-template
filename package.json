{
  "name": "node_project_template",
  "version": "1.0.0",
  "type": "module",
  "description": "Typescript & Express template",
  "author": "@ocamilomontealegre",
  "main": "index.js",
  "scripts": {
    "build": "swc ./src -d dist --strip-leading-paths",
    "clean": "rm -rf dist",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "lint": "eslint src --ignore-pattern '**/*.js' --ignore-pattern '**/*.ts'",
    "lint:fix": "npm run lint --fix",
    "test:unit": "vitest --config test/config/vitest.config.unit.ts --coverage",
    "test:e2e": "vitest --config test/config/vitest.config.e2e.ts --coverage",
    "test": "concurrently \"npm run test:unit\" \"npm run test:e2e\"",
    "prepare": "pnpm exec husky init"
  },
  "keywords": [
    "typescript",
    "express",
    "template"
  ],
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.1.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@chiguitech/node-common": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "awilix": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  }
}
